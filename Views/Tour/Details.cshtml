@model TripNest.Models.Tour

@{
    ViewData["Title"] = "Tour Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.Destination</p>
            <p>@Model.Description</p>
            <p><strong>Duration:</strong> @Model.DurationDays days</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Rating:</strong> @Model.StarRating â˜…</p>
            <a asp-controller="Booking" asp-action="Create" asp-route-tourId="@Model.Id" class="btn btn-success">Book Now</a>

        </div>
    </div>
</div>
