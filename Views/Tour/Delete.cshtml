@model TripNest.Models.Tour

<h2>Delete Tour</h2>

<h4>Are you sure you want to delete this tour?</h4>
<div>
    <h5>@Model.Title</h5>
    <p>@Model.Description</p>
    <p>Destination: @Model.Destination</p>
    <p>Duration: @Model.DurationDays days</p>
    <!-- Add any other details you want to show -->

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Dashboard" asp-controller="Agency" class="btn btn-secondary">Cancel</a>
    </form>
</div>
