@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


<div class="login-container">
    <div class="row g-0">
        <!-- Left promotional section -->
        <div class="col-md-6 login-promo">
            <h3>Discover the World with TravelHub</h3>
            <p class="lead">Join our community of travelers and explore breathtaking destinations around the globe.</p>
            <ul class="benefits-list">
                <li><i class=" bi-check-circle-fill text-success me-2"></i>Access exclusive tours and travel deals</li>
                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Manage your bookings in one place</li>
                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Save your favorite destinations</li>
                <li><i class="bi bi-check-circle-fill text-success me-2"></i> Share your travel experiences</li>
            </ul>
            <p class="trust-text">Trusted by travelers worldwide</p>
            <p class="rating-text">
                <i class=" bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                &nbsp; 4.9/5 &nbsp; &nbsp; &nbsp; • &nbsp;10,000+ users
            </p>
        </div>

        <!-- Right login form section -->
        <div class="col-md-6 login-form">
            <h2>Welcome Back</h2>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
            <form method="post" action="/Account/Login">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com"
                        required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="••••••••"
                        required />
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <br>
                <br>
                <button type="submit" class="btn btn-signin w-100">Sign in</button>
            </form>
            <p class="mt-3 text-center">
                Don't have an account? <a href="/Account/Register">Sign up now</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="@Url.Content("/css/login.css")" />
}