@*
  Layout for Agency Dashboard with sidebar navigation.
  Render page content inside the main area.
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TripNest Agency</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }
        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
        }
        .sidebar a:hover, .sidebar a.active {
            background-color: #495057;
            text-decoration: none;
        }
        .content {
            flex-grow: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column">
        <h4 class="text-center py-3 border-bottom">TripNest</h4>
        <a href="@Url.Action("Dashboard", "Agency")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
        <a href="@Url.Action("ManageTours", "Agency")" class="@(ViewContext.RouteData.Values["action"].ToString() == "ManageTours" ? "active" : "")">Manage Tours</a>
        <a href="@Url.Action("Bookings", "Agency")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Bookings" ? "active" : "")">Bookings</a>
        <a href="@Url.Action("Review", "Agency")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Review" ? "active" : "")">Review</a>

        <a href="@Url.Action("Logout", "Agency")" class="mt-auto btn btn-danger text-center mx-3 mb-3">Logout</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
