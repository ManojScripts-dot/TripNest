@{
    ViewBag.Title = "Contact Us";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="@Url.Content("/css/index.css")" />
<link rel="stylesheet" href="@Url.Content("/css/contact-us.css")" />

<div style="margin-top: 80px;">
    <h3 class="text-center mb-4" style="font-size: clamp(1.25rem, 4vw, 1.75rem); font-weight: 600; color: #2c3e50; margin-top: 0;">
        Contact Us
    </h3>
    <div class="search-container contact-us-content">
        <p class="lead text-center mb-5">
            Got a question or ready to plan your next adventure? We're here to help! At TripNest, we're committed to making your journey seamless and unforgettable. Reach out to us using the form below, or contact us directly via phone, email, or social media.
        </p>
    </div>

    <div class="search-container contact-section">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card contact-card form-card p-4">
                    <h5 class="card-title text-center mb-4">Send Us a Message</h5>
                   <form id="contact-form" class="search-form" method="post" asp-controller="Contact" asp-action="Submit">
                     @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required />
                            <div class="invalid-feedback" id="name-error"></div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required />
                            <div class="invalid-feedback" id="email-error"></div>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Your Message" required></textarea>
                            <div class="invalid-feedback" id="message-error"></div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-search">Send Message</button>
                        </div>
                    </form>
                    <div id="form-feedback" class="mt-3 text-center"></div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card contact-card shadow-sm p-4">
                    <h5 class="card-title text-center mb-4">Get in Touch</h5>
                    <div class="text-center">
                        <p class="mb-3">
                            <i class="bi bi-geo-alt me-2"></i> Sydney, Australia
                        </p>
                        <p class="mb-3">
                            <i class="bi bi-telephone me-2"></i> +61-411632034
                        </p>
                        <p class="mb-4">
                            <i class="bi bi-envelope me-2"></i> tripnest3@gmail.com
                        </p>
                        <div class="d-flex justify-content-center gap-3 contact-social-icons">
                            <a href="https://facebook.com/tripnest" target="_blank" class="text-decoration-none"><i class="bi bi-facebook"></i></a>
                            <a href="https://instagram.com/tripnest" target="_blank" class="text-decoration-none"><i class="bi bi-instagram"></i></a>
                            <a href="https://linkedin.com/company/tripnest" target="_blank" class="text-decoration-none"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("/js/contact-us.js")" asp-append-version="true"></script>
}