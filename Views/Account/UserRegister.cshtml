@model TripNest.Models.ViewModels.RegisterViewModel

<h2>Register</h2>
<form asp-action="Register" method="post">
    <label>Email:</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email"></span><br />

    <label>Password:</label>
    <input asp-for="Password" type="password" class="form-control" />
    <span asp-validation-for="Password"></span><br />

    <label>First Name:</label>
    <input asp-for="FirstName" class="form-control" /><br />

    <label>Last Name:</label>
    <input asp-for="LastName" class="form-control" /><br />

    <label>Phone Number:</label>
    <input asp-for="PhoneNumber" class="form-control" /><br />

    <label>Address:</label>
    <input asp-for="Address" class="form-control" /><br />

    <label>Country:</label>
    <input asp-for="Country" class="form-control" /><br />

    <label>Preferred Language:</label>
    <input asp-for="PreferredLanguage" class="form-control" /><br />

    <label>Profile Image URL:</label>
    <input asp-for="ProfileImageUrl" class="form-control" /><br />

    <button type="submit" class="btn btn-primary">Register</button>
</form>
