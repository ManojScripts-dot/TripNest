@model TripNest.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="register-container">
    <div class="row g-0">
        <!-- Left promotional section -->
        <div class="col-md-6 register-promo">
            <div class="promo-content">
                <h3>Discover the World with TravelHub</h3>
                <p class="lead">Join our community of travelers and explore breathtaking destinations around the globe.</p>
                <ul class="benefits-list">
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Access exclusive tours and travel deals</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Manage your bookings in one place</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Save your favorite destinations</li>
                    <li><i class="bi bi-check-circle-fill text-success me-2"></i> Share your travel experiences</li>
                </ul>
                <div class="promo-footer">
                    <hr />
                    <p class="trust-text">Trusted by travelers worldwide</p>
                    <p class="rating-text">
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                          4.9/5       •  10,000+ users
                    </p>
                </div>
            </div>
        </div>

        <!-- Right registration form section -->
        <div class="col-md-6 register-form">
            <h2>Create Your Account</h2>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
            <form asp-action="Register" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="John" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Doe" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="your@email.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">Must be at least 8 characters with 1 uppercase, 1 number, and 1 special character</small>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="123-456-7890" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="123 Main St" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" placeholder="Country" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PreferredLanguage" class="form-label"></label>
                        <input asp-for="PreferredLanguage" class="form-control" placeholder="English" />
                        <span asp-validation-for="PreferredLanguage" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="ProfileImage" class="form-label">
                        <i class="bi bi-image-fill me-2"></i>Profile Image
                    </label>
                    <input asp-for="ProfileImage" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                    <small class="form-text text-muted">Upload a profile picture (optional). Supported formats: JPG, PNG, GIF, WebP. Max size: 10MB.</small>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="terms" name="terms" required />
                    <label class="form-check-label" for="terms">I agree to the Terms of Service and Privacy Policy</label>
                </div>
                <button type="submit" class="btn btn-signin w-100">Create Account</button>
            </form>
            <p class="mt-3 text-center">
                Already have an account? <a href="/Account/Login">Sign in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="@Url.Content("/css/register.css")" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Optional: Preview selected image
        document.querySelector('input[name="ProfileImage"]').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // You can add image preview functionality here if needed
                    console.log('Image selected:', file.name);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}