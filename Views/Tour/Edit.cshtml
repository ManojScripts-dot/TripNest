@model TripNest.Models.Tour

@{
    Layout = "~/Views/Shared/_AgencyDashboardLayout.cshtml";
    ViewData["Title"] = "Edit Tour";
}

<link rel="stylesheet" href="@Url.Content("~/css/index.css")" />

<div class="search-container mt-5">
    <h2 class="mb-4 text-center">Edit Tour</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="search-form">
        <input type="hidden" asp-for="Id" />
        <div class="row g-2">
            <div class="col-12 col-md-6">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter tour title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter tour description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="DurationDays" class="form-label"></label>
                <input asp-for="DurationDays" class="form-control" type="number" placeholder="Enter duration (days)" />
                <span asp-validation-for="DurationDays" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="StarRating" class="form-label"></label>
                <input asp-for="StarRating" class="form-control" type="number" min="1" max="5" placeholder="Enter star rating (1-5)" />
                <span asp-validation-for="StarRating" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Destination" class="form-label"></label>
                <input asp-for="Destination" class="form-control" placeholder="Enter destination" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Draft">Draft</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label for="imageFile" class="form-label">Tour Image</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2">
                        <p>Current Image:</p>
                        <img src="@Url.Content(Model.ImagePath)" alt="Current tour image" style="max-width: 200px; height: auto;" />
                    </div>
                }
            </div>
        </div>
        <div class="row g-2 mt-3">
            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-search">Update Tour</button>
                <a href="@Url.Action("ManageTours", "Agency")" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}